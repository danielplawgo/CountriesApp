@model IEnumerable<CountriesApp.Web.ViewModels.Countries.IndexItemViewModel>

<p>
    @Html.ActionLink("Create New", MVC.Countries.Create())
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capital)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capital)
        </td>
        <td>
            @Html.ActionLink("Details", MVC.Countries.Details(item.Id))
        </td>
    </tr>
}

</table>
